# Environment Variables for DummAir
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# WHATSAPP SUPPORT
# ============================================================================
NEXT_PUBLIC_WHATSAPP_NUMBER=+14099047084

# ============================================================================
# SUPABASE DATABASE & AUTHENTICATION (⭐ REQUIRED)
# ============================================================================
# Get these from: https://supabase.com/dashboard → Your Project → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...(keep secret!)
SUPABASE_JWT_SECRET=your-jwt-secret-from-database-settings

# Get from: Settings → Database → Connection String → URI
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxxxxxxxxxx.supabase.co:5432/postgres

# ============================================================================
# SENDGRID EMAIL SERVICE (⭐ REQUIRED)
# ============================================================================
# Get from: https://sendgrid.com/dashboard → Settings → API Keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@dummair.com
SENDGRID_FROM_NAME=DummAir
ADMIN_EMAIL=admin@dummair.com

# ============================================================================
# STRIPE PAYMENT GATEWAY
# ============================================================================
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_from_stripe_dashboard

# ============================================================================
# FLUTTERWAVE PAYMENT GATEWAY
# ============================================================================
# Get these from: https://dashboard.flutterwave.com/settings/apis
NEXT_PUBLIC_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_public_key_here
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_secret_key_here
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST_your_encryption_key

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# ============================================================================
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
