# Environment Variables for DummAir
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# WHATSAPP SUPPORT
# ============================================================================
NEXT_PUBLIC_WHATSAPP_NUMBER=+14099047084

# ============================================================================
# SUPABASE DATABASE & AUTHENTICATION (⭐ REQUIRED)
# ============================================================================
# Get these from: https://supabase.com/dashboard → Your Project → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...(keep secret!)
SUPABASE_JWT_SECRET=your-jwt-secret-from-database-settings

# Get from: Settings → Database → Connection String → URI
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxxxxxxxxxx.supabase.co:5432/postgres

# ============================================================================
# EMAIL SERVICE (⭐ REQUIRED)
# ============================================================================
# Resend (Recommended for better inbox delivery)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx
RESEND_FROM_EMAIL=support@dummair.com
RESEND_FROM_NAME=DummAir Support

# Alternative: SendGrid
# Get from: https://sendgrid.com/dashboard → Settings → API Keys
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# SENDGRID_FROM_EMAIL=support@dummair.com
# SENDGRID_FROM_NAME=DummAir

# Admin email (receives URGENT new order notifications for swift processing)
ADMIN_EMAIL=payment@dummair.com

# ============================================================================
# STRIPE PAYMENT GATEWAY
# ============================================================================
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_from_stripe_dashboard

# ============================================================================
# FLUTTERWAVE PAYMENT GATEWAY
# ============================================================================
# Get these from: https://dashboard.flutterwave.com/settings/apis
NEXT_PUBLIC_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_public_key_here
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_secret_key_here
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST_your_encryption_key

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================================================
# CUSTOMER FEEDBACK SURVEY
# ============================================================================
# URL of the feedback survey sent after successful payments
POST_PAYMENT_SURVEY_URL=https://forms.gle/9eFxvzsfT8hrj17QA
# Delay (in hours) between payment confirmation and sending the survey email
POST_PAYMENT_SURVEY_DELAY_HOURS=6
# Maximum age (in days) of paid orders eligible for the survey email
POST_PAYMENT_SURVEY_LOOKBACK_DAYS=14

# ============================================================================
# CRON JOB SECURITY (⭐ REQUIRED for automated payment reminders)
# ============================================================================
# Generate a secure random string using: openssl rand -base64 32
CRON_SECRET=your-secure-random-string-here

# ============================================================================
# WHATSAPP NOTIFICATIONS (OPTIONAL - For instant admin alerts)
# ============================================================================
# Admin's WhatsApp number for order notifications (E.164 format: +1234567890)
ADMIN_WHATSAPP_NUMBER=+1234567890

# Option 1: Twilio WhatsApp API (Recommended - Most Reliable)
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Option 2: Fonnte (Alternative - Simple Setup)
# Get from: https://fonnte.com
# FONNTE_API_KEY=your_fonnte_api_key_here

# ============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# ============================================================================
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
